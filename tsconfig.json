{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"],
      "@components": ["./src/components"],
      "@screens": ["./src/screens"]
    }
  },
  "include": ["src/**/*"]
}
